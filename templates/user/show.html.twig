{% extends 'page_temps/base_temp.html.twig' %}
{% block body %}
    <h1>Používateľia</h1>

    <table class="table form-wrapper">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Meno</th>
            <td>{{ user.name }}</td>
        </tr>
        <tr>
            <th>Priezvisko</th>
            <td>{{ user.surname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Heslo</th>
            <td>{{ user.password }}</td>
        </tr>
        </tbody>
    </table>
    {{ include('user/_delete_form.html.twig') }}
    <br>
    <div class="create-new">
        <a href="{{ path('user_index') }}">Späť na zoznam</a>
        <a href="{{ path('user_edit', {'id': user.id}) }}">Upraviť</a>
    </div>

{% endblock %}
