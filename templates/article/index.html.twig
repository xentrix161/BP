{% extends 'page_temps/base_temp.html.twig' %}
{% block body %}
    <h1>Article CRUDE - Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="id-class">Id</th>
                <th class="name-surname">Názov</th>
                <th>Popis</th>
                <th class="name-surname">Cena</th>
                <th>Obrázok</th>
                <th class="action">Akcie</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.desc }}</td>
                <td>{{ article.price | number_format(2, '.', ',') }}</td>
                <td>{{ article.img }}</td>
                <td>{{ article.available ? 'Yes' : 'No' }}</td>
                <td>{{ article.amount }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Zobraziť</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Upraviť</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Žiadne položky na zobrazenie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="create-new">
        <a href="{{ path('article_new') }}">Vytvoriť nový article</a>
    </div>
{% endblock %}

