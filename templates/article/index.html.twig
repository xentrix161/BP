{% extends 'page_temps/base_temp.html.twig' %}
{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead class="table-head">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Desc</th>
                <th>Price</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.desc }}</td>
                <td>{{ article.price }}</td>
                <td>{{ article.img }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
