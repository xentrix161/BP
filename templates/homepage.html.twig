{% extends 'page_temps/base_temp.html.twig' %}

{% block body %}
    <input type="checkbox" id="panel-open-close">
    <div class="category-panel">
        <div id="dateDisplay"></div>
        <div id="timeDisplay"></div>

        <a class="homepage-title" href="/homepage">pAnkst0re!</a>
        <label class="close-btn" for="panel-open-close">&times;</label>
        <h2>Kategórie</h2>
        {% for ctg in categories %}
            <a href="{{ url('app_homepage_category', {'id': ctg.id}) }}">{{ ctg.name }}</a>
        {% endfor %}
    </div>

    <div id="main">
        <label class="open-btn" for="panel-open-close">&#9776; Ponuka</label>
    </div>

    <div class="collection">
        {% for item in data %}
            <div class="product">
                <a class="product-url" href="{{ url('produkt', {'id': item.id}) }}">
                    <img class="product-image" src="{{ item.img }}" alt="">
                    <p class="product-name">
                        {{ item.title }}
                    </p>
                </a>
                <span class="product-price">
                    Cena {{ item.price |number_format(2, '.', ',') }} €
            </span>
            </div>
        {% endfor %}
    </div>

    <div class="paging">
        <div class="paging-buttons">
            {% for i in totalPages %}
                {% if i == pageNumber or pageNumber is null %}
                    <span class="page-button button selected">{{ i }}</span>
                {% elseif i == 0 %}
                    <span class="page-button dots">. . .</span>
                {% else %}
                    {% if categoryBool %}
                        <a href="{{ url('app_homepage_category', {'pageNumber': i, 'id': id}) }}" class="page-button button">{{ i }}</a>
                    {% else %}
                        <a href="{{ url('app_homepage', {'pageNumber': i}) }}" class="page-button button">{{ i }}</a>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}

