{% extends 'page_temps/base_temp.html.twig' %}

{% block body %}
    <h1>Profity portálu</h1>
    <table class="table">
        <thead>
        <tr>
            <th class="id-class">ID záznamu</th>
            <th class="name-surname">Profit</th>
            <th class="name-surname">Číslo objednávky</th>
        </tr>
        </thead>
        <tbody>
        {% for profit in listOfProtis %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><b>{{ profit.profit }}</b>€</td>
                <td>{{ profit.orderId }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="create-new">
        <a href="{{ path('statistics') }}">Späť na zoznam štatistík</a>
    </div>
{% endblock %}


