<form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('Naozaj si želáte vymazať kategóriu?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn">Vymazať</button>
</form>
