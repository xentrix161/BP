{% extends 'page_temps/base_temp.html.twig' %}
{% block body %}
    <h1>Kategórie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Názov</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">Späť na zoznam</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">Upraviť</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
