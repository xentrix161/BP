{% extends 'page_temps/base_temp.html.twig' %}
{% block body %}
    <h1>ShoppingCart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shopping_cart.id }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ shopping_cart.userId }}</td>
            </tr>
            <tr>
                <th>Cart_content</th>
                <td>{{ shopping_cart.cartContent ? shopping_cart.cartContent|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ shopping_cart.date ? shopping_cart.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Total_price</th>
                <td>{{ shopping_cart.totalPrice }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ shopping_cart.status }}</td>
            </tr>
        </tbody>
    </table>

    <div class="create-new">
        <a href="{{ path('shopping_cart_index') }}">back to list</a>
    </div>

