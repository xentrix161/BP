{% extends 'page_temps/base_temp.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form name="login" method="post" class="form-wrapper">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Si prihlásený ako {{ app.user.username }}, <a href="{{ path('app_logout') }}">Odhlásiť</a>
        </div>
    {% endif %}



    <div id="login">
        <h1 class="h3 mb-3 font-weight-normal">Prihlásenie</h1>
        <div class="form-group">
            <label class="control-label required" for="inputEmail">Email</label>
            <input class="formInput form-control" placeholder="Zadaj svoj email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
        <div class="form-group">
            <label class="control-label required" for="inputPassword">Heslo</label>
            <input class="formInput form-control" placeholder="Zadaj svoje heslo" type="password" name="password" id="inputPassword" class="form-control" required>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me" id="remember_me"> Zostať prihlásený
            </label>
        </div>
        <div class="form-group">
            <a href="http://127.0.0.1:8000/reset-passwords">Zabudol som heslo</a>
        </div>

        <div class="form-group">
            <button class="btn btn-form btn" type="submit">
                Prihlásiť sa
            </button>
        </div>
    </div>


















