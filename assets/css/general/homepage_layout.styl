body {
  background-color black
}

#btn-form {
  margin-left 90%
}

a {
  font-size 1vw
  color yellow
  margin-right 20px
}

a.button {
  background-color #222222
  padding 5px
  box-shadow 0 0 4px #ddd
  font-size 1.5vw
  display inline-block
  float right
  -webkit-appearance button
  -moz-appearance button
  appearance button
  text-decoration none
  color yellow
}

.collection {
  display grid
  grid-auto-columns max-content
  grid-auto-flow dense
  grid-auto-rows minmax(100px, auto)
  grid-gap 25px
  grid-template-columns repeat(3, 1fr)

  margin 60px auto
  max-width 800px
}

.product {

  &image {
    background-color black
    display inline-block
    height 8vw
    width 100%
  }

  &__name {

    p {
      font-family sans-serif
      font-size 1.1vw
      font-weight bold

      a {
        color white
        text-decoration none
        display block
      }
    }
  }

  &__price {

    p {
      font-family sans-serif
      font-size 1.1vw
      color yellow
    }
  }
}