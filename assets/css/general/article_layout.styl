img {
  height: 20vw;
  width: 20vw;
}


body {
  background-color: antiquewhite;
}

.card {
  max-width: 30vw;
  margin: auto;
  text-align: center;
  font-family: Arial;
}

.price {
  color: black;
  font-size: 2.8vw;
}

.card button {
  border-style: double;
  border-color: #8959A8;
  padding: 1vw;
  color: white;
  background-color: red;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 1vw;
}

input {
  background-color: black;
  color: white;
  width: auto;
  height: 1.5vw;
  outline: #B0413E;
  font-size: 1vw;
}