.detail
  max-width 960px
  margin 5em auto 0 auto
  .image
    &-wrapper
     width 50%
  .info-wrapper
    width 50%
    color white
    padding-left 1em
    .headline
      font-size 4.48rem
      color yellow
    .description
      font-size 2.24rem
      margin 1em 0 2em 0
    .price-wrapper
      font-size 7.2rem
      .price
        font-weight bold
        display inline-block
        color yellow
      .cart
        display inline-block
        button
          background black url("../images/cart2.png") center center no-repeat
          background-size contain
          cursor pointer
          padding 3em
          vertical-align: super