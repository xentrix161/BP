//hotovo
body
  margin 0
  padding 0
  background-color black
  font-family 'Arial'
  *
    box-sizing: border-box

//hotovo
.form-wrapper
  width 25vw
  box-shadow 0 0 3pt 2pt yellow
  margin 8vw auto
  padding 2vw 3vw
  background #262626
  border-radius 15px

  > div
    width 100%

  > div
    width 100%


//hotovo
label
  color yellow
  font-size 1em
  padding .5em 0
  display inline-block


//hotovo
.formInput
  width 100%
  height 30px
  border none
  border-radius 3px
  padding-left 8px

.form-btn
  width 100%
  height 30px
  font-weight bold
  box-shadow 0 0 3pt 2pt yellow
  border-radius 17px
  margin 1.5em 0 0 0
  color black


