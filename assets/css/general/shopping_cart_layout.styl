.shopping-cart-wrapper
  max-width 960px
  margin auto

  .empty-cart-info
    text-align center
    color white

  .title
    margin 15px 0
    text-align center

  .btn-next
    text-align center
    margin-top 30px

  .total-price-container
    text-align right
    font-size 18px
    margin-top 10px

  .clear
    display inline-block
    width 100%
    text-align right
    margin-top 10px
    font-size 18px

  .shopping-cart-row
    color yellow
    border 1px solid
    background-color #111
    display grid
    grid-auto-columns max-content
    grid-template-columns 75px 43% 15% 15% 20%
    grid-gap 10px
    padding 10px 15px
    align-items center
    margin-top 5px

    &.error-border
      border-color red

    .image
      img
        width auto
        height 75px

    a
      &:hover
        text-decoration none




