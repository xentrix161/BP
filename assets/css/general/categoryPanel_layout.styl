#panel-open-close
  display none

.chart
  .chart-main-label
    margin 0

  .chart-content-box
    margin 10px 0

    .chart-single-box
      margin 10px 0


      input[id^="chart-"]
        display none

        &:checked
          ~ .chart-data
           display block

      .chart-title

        label
          cursor pointer
          padding 5px 0
          display block
          background black
          -webkit-touch-callout none
          -webkit-user-select none
          -khtml-user-select none
          -moz-user-select none
          -ms-user-select none
          user-select none

      .chart-data
        background #1b1919
        display none

        .chart-row
          padding 5px

          &:nth-child(odd)
            background #100f0f

          span
            &:nth-child(1)
              color yellow
              font-size .75rem

            &:nth-child(2)
              color white

            &:nth-child(3)
              display block
              text-align right


.category-panel
  height 100%
  width 14em
  position fixed
  z-index 1
  top 0
  left 0
  background-color #111111
  overflow-x hidden
  padding-top 60px
  transition .5s

  .homepage-title
    display block
    padding 10px 0
    font-weight bold
    text-decoration underline overline solid red
    color red
    font-size 2.4em
    margin-bottom 10px
    text-align center

  > a
    padding 8px 8px 8px 32px
    text-decoration none
    font-size 1.25em
    color aliceblue
    display block
    transition 0.3s

    &:hover
      color yellow

  .close-btn
    position absolute
    top 0
    right 10px
    font-size 2.25em
    margin-left 50px
    color white

  h2
    margin-left 15px
    font-size 1.5em
    color yellow

  > div
    color aliceblue
    padding 0 25px 25px 15px
    font-size 1em
    font-family Arial


.open-btn
  display none
  font-size 1.25em
  cursor pointer
  background-color #111111
  color white
  padding 10px 15px
  border none

  &:hover
    background-color yellow
    color black

#main
  transition margin-left .5s
  padding 20px
  padding-left 0
  max-width 960px
  margin auto

@media only screen and (max-width: 768px) {
  .open-btn {
    display inline
  }

  .category-panel {
    left -14em
  }

  #panel-open-close:checked {
    ~ .category-panel {
      left 0
    }

    ~ #main {
      .open-btn {
        display none
      }
    }
  }
}

@media only screen and (min-width: 768px) {
  #panel-open-close:checked {
    ~ .category-panel {
      left -14em
    }

    ~ #main {
      .open-btn {
        display inline
      }
    }
  }
}



