.category-bar
  height 100%
  width 250px
  position fixed
  z-index 1
  top 0
  left 0
  background-color #111111
  overflow-x hidden
  padding-top 20px
  a, .dropdown-btn
    padding 6px 8px 6px 16px
    text-decoration none
    font-size 20px
    color #818181
    display block
    border none
    background none
    width 100%
    text-align left
    cursor pointer
    outline none
  a:hover, .dropdown-btn:hover
    color yellow
  label
    display block
    padding 10 0px
    font-weight bold
    text-decoration underline overline solid darkred
    margin-left 15px
    font-size 2.6em
    margin-bottom 10px
  h2
    margin-left 15px
    font-size 1.8em
    color yellow

.main
  margin-left 250px
  font-size 20px
  padding 0 10px

.active
  background-color grey
  color white

.dropdown-container
  display none
  background-color #262626
  padding-left 8px

.fa-caret-down
  float right
  padding-right 8px